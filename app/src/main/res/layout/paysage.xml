<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="0dp">

                <EditText
                    android:id="@+id/edtResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:hint="@string/_0"
                    android:inputType="text"
                    android:paddingRight="10dp"
                    android:textSize="35sp"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_margin="0dp">

                    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:columnCount="7"
                        android:rowCount="5">

                        <!-- First row -->
                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle5"
                            android:id="@+id/btn_x2"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:text="x\u00B2" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle5"
                            android:id="@+id/btn_x3"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:text="x\u00B3" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle5"
                            android:id="@+id/btn_x4"
                            android:layout_row="0"
                            android:layout_column="2"
                            android:text="x\u00B4" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle2"
                            android:id="@+id/btn_clear"
                            android:layout_row="0"
                            android:layout_column="3"
                            android:text="C" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle2"
                            android:id="@+id/btn_divide"
                            android:layout_row="0"
                            android:layout_column="4"
                            android:text="\u00F7" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle2"
                            android:id="@+id/btn_multiply"
                            android:layout_row="0"
                            android:layout_column="5"
                            android:text="\u00D7" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle2"
                            android:id="@+id/btn_backspace"
                            android:layout_row="0"
                            android:layout_column="6"
                            android:text="âŒ«" />

                        <!-- Second row -->
                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle5"
                            android:id="@+id/btn_factorial"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:text="x!" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle5"
                            android:id="@+id/btn_square_root"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:text="\u221A" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle5"
                            android:id="@+id/btn_nth_root"
                            android:layout_row="1"
                            android:layout_column="2"
                            android:text="\u221An" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle3"
                            android:id="@+id/btn_7"
                            android:layout_row="1"
                            android:layout_column="3"
                            android:text="7" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle3"
                            android:id="@+id/btn_8"
                            android:layout_row="1"
                            android:layout_column="4"
                            android:text="8" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle3"
                            android:id="@+id/btn_9"
                            android:layout_row="1"
                            android:layout_column="5"
                            android:text="9" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle2"
                            android:id="@+id/btn_subtract"
                            android:layout_row="1"
                            android:layout_column="6"
                            android:text="-" />

                        <!-- Third row -->
                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle5"
                            android:id="@+id/btn_e"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:text="e" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle5"
                            android:id="@+id/btn_ln"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:text="ln" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle5"
                            android:id="@+id/btn_log"
                            android:layout_row="2"
                            android:layout_column="2"
                            android:text="log" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle3"
                            android:id="@+id/btn_4"
                            android:layout_row="2"
                            android:layout_column="3"
                            android:text="4" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle3"
                            android:id="@+id/btn_5"
                            android:layout_row="2"
                            android:layout_column="4"
                            android:text="5" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle3"
                            android:id="@+id/btn_6"
                            android:layout_row="2"
                            android:layout_column="5"
                            android:text="6" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle2"
                            android:id="@+id/btn_add"
                            android:layout_row="2"
                            android:layout_column="6"
                            android:text="+" />

                        <!-- Fourth row -->
                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle5"
                            android:id="@+id/btn_sin"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:text="sin" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle5"
                            android:id="@+id/btn_cos"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:text="cos" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle5"
                            android:id="@+id/btn_tan"
                            android:layout_row="3"
                            android:layout_column="2"
                            android:text="@string/tan" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle3"
                            android:id="@+id/btn_1"
                            android:layout_row="3"
                            android:layout_column="3"
                            android:text="1" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle3"
                            android:id="@+id/btn_2"
                            android:layout_row="3"
                            android:layout_column="4"
                            android:text="2" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle3"
                            android:id="@+id/btn_3"
                            android:layout_row="3"
                            android:layout_column="5"
                            android:text="3" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle2"
                            android:id="@+id/btn_underscore"
                            android:layout_row="3"
                            android:layout_column="6"
                            android:text="_" />

                        <!-- Fifth row -->
                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle5"
                            android:id="@+id/btn_open_parenthesis"
                            android:layout_row="4"
                            android:layout_column="0"
                            android:text="(" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle5"
                            android:id="@+id/btn_close_parenthesis"
                            android:layout_row="4"
                            android:layout_column="1"
                            android:text=")" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle5"
                            android:id="@+id/btn_pi"
                            android:layout_row="4"
                            android:layout_column="2"
                            android:text="\u03C0" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle3"
                            android:id="@+id/btn_percentage"
                            android:layout_row="4"
                            android:layout_column="3"
                            android:text="%" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle3"
                            android:id="@+id/btn_0"
                            android:layout_row="4"
                            android:layout_column="4"
                            android:text="0" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle3"
                            android:id="@+id/btn_dot"
                            android:layout_row="4"
                            android:layout_column="5"
                            android:text="." />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/btnStyle4"
                            android:id="@+id/btn_equals"
                            android:layout_row="4"
                            android:layout_column="6"
                            android:text="=" />

                    </GridLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
